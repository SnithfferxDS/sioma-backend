{
    "compilerOptions": {
        "target": "ES2020", // Modern JavaScript target
        "module": "CommonJS", // Module system for Node.js
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Allow default imports from CommonJS modules
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
        "types": ["node", "bun"],
        "baseUrl": "./", // Base directory for resolving non-relative imports
        "paths": {
            "@App": ["src/*"], // Map imports to the src folder
            "@Configs/*": ["src/configs/*"],
            "@DB/*": ["db/*"],
            "@Lib/*": ["src/lib/*"],
            "@Middleware/*": ["src/middleware/*"],
            "@Modules/*": ["src/modules/*"],
            "@Routes/*": ["src/routes/*"],
            "@Services/*": ["src/services/*"],
            "@Schemas/*": ["src/types/schemas/*"],
            "@Types/*": ["src/types/*"],
            "@Utils/*": ["src/lib/utils/*"],
            "@Validators/*": ["src/types/validators/*"]
        },
        "resolveJsonModule": true, // Allow importing JSON files
        "outDir": "./dist", // Output directory for compiled files
        "moduleResolution": "node", // Resolve modules like Node.js
        "allowSyntheticDefaultImports": true // Allow default imports for modules without them
    },
    "include": ["env.d.ts", "**/*.ts", "**/*.tsx"], // Include all files in the src directory
    "exclude": ["node_modules", "dist"] // Exclude node_modules and output directory
}
